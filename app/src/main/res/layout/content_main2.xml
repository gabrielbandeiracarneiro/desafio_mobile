<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:background="@drawable/shape"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profile_relative_layout_photo"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:maxWidth="@android:dimen/app_icon_size"
                android:src="@drawable/master" />

            <TextView
                android:id="@+id/profile_relative_layout_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/profile_relative_layout_photo"
                android:text="xxxx xxxx xxxx 1875"
                android:textColor="@color/ic_launcher_background" />

            <TextView
                android:id="@+id/profile_relative_layout_bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Gasto R$ 2.000,00\nDisponÃ­vel R$500"
                android:textColor="@color/ic_launcher_background" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>